{% extends "layout.njk" %}

{% block head %}
<title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
<section id="recipe-cards">
    
    {% for item in items %}
    
    <div class="card">
        <div class="image-content">
            <img src="{{item.image}}" alt="Imagem de {{item.title}}">
        </div>

        <div class="info-content">
            <h1>{{item.title}}</h1>
            <p>por {{item.author}}</p>
        </div>
    </div>

    {% endfor %}

    {% for item in items %}
    
